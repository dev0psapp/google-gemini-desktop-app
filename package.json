{
  "name": "google-gemini-desktop-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop application for Google Gemini AI - Windows, macOS, and Linux support with universal installers (x64 & ARM64)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 --arm64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:linux": "electron-builder --linux --x64 --arm64",
    "build:all": "electron-builder --win --mac --linux --x64 --arm64",
    "generate-icons": "./scripts/generate-icons.sh"
  },
  "keywords": [
    "google-gemini",
    "gemini",
    "gemini-ai",
    "electron",
    "desktop-app",
    "cross-platform",
    "windows",
    "macos",
    "linux",
    "ai-assistant",
    "chatbot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.gemini.electron",
    "productName": "Gemini",
    "protocols": [
      {
        "name": "Google Gemini Desktop App",
        "schemes": ["google-gemini-desktop-app"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "LSApplicationCategoryType": "public.app-category.productivity",
        "NSHighResolutionCapable": true,
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth for Passkey authentication.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth for Passkey authentication."
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

